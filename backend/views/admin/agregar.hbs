<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="titulo" placeholder="titulo" name="titulo">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control" id="detalle" placeholder="detalle"
                            name="detalle"></textarea>
                    </div>
                </div>
                 <div class="mb-3 row">
                     <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                 </div>
                
                <button type="submit" class="btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
            
    </div>
</div>